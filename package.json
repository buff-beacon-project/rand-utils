{
  "name": "@buff-beacon-project/rand-utils",
  "version": "0.1.1",
  "description": "Tools for consuming public randomness sources",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buff-beacon-project/rand-utils.git"
  },
  "keywords": [],
  "author": "Jasper Palfree",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buff-beacon-project/rand-utils/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "browser": "./dist/index.js",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "node": "./dist/index.js",
      "bun": "./src/index.ts",
      "types": "./src/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "module": "src/index.js",
  "main": "src/index.js",
  "engines": {
    "node": ">=12"
  },
  "browserslist": [
    "last 1 version",
    "> 1%"
  ],
  "homepage": "https://random.colorado.edu",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "docs": "typedoc --out docs --exclude *.test.ts --plugin typedoc-plugin-markdown src",
    "prepublishOnly": "bun run build && bun run docs",
    "release": "bunx bumpp --no-push"
  },
  "dependencies": {
    "bit-buffer": "^0.2.5"
  },
  "devDependencies": {
    "bun-types": "latest",
    "tsup": "^7.2.0",
    "typedoc": "^0.25.11",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.4.2"
  }
}
